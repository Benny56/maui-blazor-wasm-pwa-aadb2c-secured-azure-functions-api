<CascadingAuthenticationState>
    <Router AppAssembly="typeof(Main).Assembly" AdditionalAssemblies="new [] { typeof(Sample.Razor.Pages.Index).Assembly }">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <p>Authorisieren...</p>
                </Authorizing>
                <NotAuthorized>
                    <RedirectToLogin />
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Sorry, unter dieser Adresse gibt es leider nichts.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
